generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserState {
  ACTIVE
  INACTIVE
}

enum Role {
  USER
  ADMIN
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  surname       String
  email         String    @unique
  password      String
  number        String?
  country       String?
  freeConsult   Boolean   @default(true)
  creationDate  DateTime  @default(now())
  userState     UserState @default(ACTIVE)
  role          Role      @default(USER)
  lastAccess    DateTime?
  questionnaireResponses QuestionnaireResponse[]
}

model QuestionnaireResponse {
  id                   Int      @id @default(autoincrement())
  location             String
  knowsExactDates      Boolean  @default(true)
  startDate            DateTime?
  endDate              DateTime?
  estimatedDepartureDate DateTime?
  estimatedDurationDays Int?
  tripType             String
  adults               Int
  children             Int      @default(0)
  infants              Int      @default(0)
  budgetAmount         Int
  experiences          String[]
  flightPrefs          String[]
  flightCompany        String?
  accommodationPrefs   String[]
  accommodationCompany String?
  otherDetails         String?
  contactName          String
  contactEmail         String
  contactPhone         String?
  createdAt            DateTime @default(now())
  userId               Int?
  user                 User?    @relation(fields: [userId], references: [id])
}
